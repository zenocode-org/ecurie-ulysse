---
import Title2 from "../../../shared/Title2.astro";

export interface Props {
  title: string;
  members: Array<{
    role: string;
    count: number;
    description: string;
  }>;
  className?: string;
}

const { title, members, className = "" } = Astro.props;
---

<section class={`py-12 md:py-20 ${className}`}>
  <div class="container mx-auto px-4">
    <Title2>{title}</Title2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {members.map((member) => (
        <div class="p-6 rounded-lg border border-box-border bg-box-bg dark:bg-base-dark-800 shadow-lg">
          <h3 class="text-xl font-semibold mb-2 text-primary-600 dark:text-primary-400">
            {member.count} {member.role}
          </h3>
          <p class="text-accent-600 dark:text-accent-300">{member.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

