---
import type { ImageMetadata } from "astro";
import Title2 from "../../../shared/Title2.astro";
import Paragraph from "../../../shared/Paragraph.astro";
import LazyImage from "../../../shared/LazyImage.astro";
import Title from "../../../shared/Title.astro";
import SubTitle2 from "../../../shared/SubTitle2.astro";

export interface Props {
  title: string;
  description: string;
  image?: string | ImageMetadata;
  className?: string;
}

const { title, description, image, className = "" } = Astro.props;
---

<div class={`${className}`}>
  <SubTitle2>{title}</SubTitle2>
  {image && (
    <div class="mb-6 rounded-lg overflow-hidden shadow-lg">
      {typeof image === "string" ? (
        <img
          src={image}
          alt={title}
          class="w-full h-auto object-cover"
          loading="lazy"
        />
      ) : (
        <LazyImage
          src={image}
          alt={title}
          class="w-full h-auto object-cover"
        />
      )}
    </div>
  )}
  <Paragraph className="whitespace-pre-line">{description}</Paragraph>
</div>

