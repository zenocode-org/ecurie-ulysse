---
import LazyImage from "../../../shared/LazyImage.astro";

export interface Props {
  name: string;
  visual: ImageMetadata;
  occupation: string;
  quote: string;
}

const { name, visual, occupation, quote } = Astro.props;
---

<div
  class="flex w-full max-w-[26rem] flex-col rounded-xl dark:bg-base-dark-800 shadow-lg dark:shadow-dark ring-1 ring-black/5"
>
  <div class="flex flex-row items-center overflow-hidden p-4 gap-4">
    <div class="shrink-0 h-[58px] w-[58px] rounded-full overflow-hidden">
      <LazyImage
        src={visual}
        alt="profile picture"
        height={58}
        class="inline-block w-full h-full object-cover"
      />
    </div>
    <div class="flex w-full flex-col gap-0.5">
      <div class="flex items-center justify-between">
        <h5
          class="block text-xl font-semibold leading-snug text-primary-900 dark:text-primary-100"
        >
          {name}
        </h5>
        <div class="5 flex items-center gap-0">
          {
            [...Array(5).keys()].map(() => {
              return (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  class="h-5 w-5 fill-[#d19e00]"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                    clip-rule="evenodd"
                  />
                </svg>
              );
            })
          }
        </div>
      </div>
      <p
        class="block font-light leading-relaxed text-primary-900 dark:text-primary-300/50"
      >
        {occupation}
      </p>
    </div>
  </div>
  <div class="p-4">
    <p class="block font-sans font-light leading-relaxed italic">
      "{quote}"
    </p>
  </div>
</div>
