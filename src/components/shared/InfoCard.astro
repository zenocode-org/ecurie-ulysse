---
export interface Props {
  title: string;
  content: string | Array<{ label?: string; value: string }>;
  icon?: string;
  className?: string;
}

const { title, content, icon, className = "" } = Astro.props;

const isArray = Array.isArray(content);
---

<div
  class={`p-6 rounded-lg border border-box-border bg-box-bg dark:bg-base-dark-800 shadow-lg ${className}`}
>
  {icon && (
    <div class="mb-4">
      <div class="w-12 h-12 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6 text-primary-600 dark:text-primary-400"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      </div>
    </div>
  )}
  <h3 class="text-xl font-semibold mb-4 text-accent dark:text-accent-light">
    {title}
  </h3>
  {isArray ? (
    <div class="space-y-2">
      {content.map((item) => (
        <div class="flex items-start gap-2">
          {item.label && (
            <span class="font-medium text-accent-600 dark:text-accent-300">
              {item.label}:
            </span>
          )}
          <span class="text-accent dark:text-accent-light">{item.value}</span>
        </div>
      ))}
    </div>
  ) : (
    <p class="text-accent-600 dark:text-accent-300">{content}</p>
  )}
</div>

